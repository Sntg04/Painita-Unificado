{
  "name": "painita-unificado",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:crm": "node apps/crm/index.js",
    "dev:web": "cross-env CRM_BASE=http://127.0.0.1:4001 node apps/web/server.js",
    "dev:api": "cross-env CRM_BASE=http://127.0.0.1:4001 node apps/api/index.js",
    "dev": "concurrently -k \"npm:dev:crm\" \"npm:dev:web\"",
    "dev:all": "concurrently -k \"npm:dev:crm\" \"npm:dev:web\" \"npm:dev:api\"",
    "start": "npm run dev:all",
  "test:e2e": "node ./scripts/e2e.js",
  "user:create": "node ./scripts/create-user.js"
  },
  "devDependencies": {
  "dotenv": "^16.4.5",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3"
  }
}
